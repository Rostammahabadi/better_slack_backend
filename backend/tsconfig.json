{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],  // Added DOM for console, process etc.
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@types/*": ["node_modules/@types/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "express", "mongoose"]  // Added explicit types
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}